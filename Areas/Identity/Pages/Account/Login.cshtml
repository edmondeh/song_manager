@page "/login"
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    string siteUrl = HttpContext.Request.Scheme + System.Uri.SchemeDelimiter + HttpContext.Request.Host.Value;
}

<div class="login-box">
    <div class="login-logo">
        <a href="@siteUrl"><b>Song Manager</b></a>
    </div>
    <div class="login-box-body">
        <p class="login-box-msg">Sign in to start your session</p>
        <form id="account" method="post">
            @*<div asp-validation-summary="All" class="text-danger"></div>*@
            <div class="form-group has-feedback has-errorYesorNo">
                <input class="form-control" placeholder="Email" asp-for="Input.Email" required autofocus>
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group has-feedback has-errorYesorNo">
                <input class="form-control" placeholder="Password" asp-for="Input.Password" required>
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <label>
                            <input type="checkbox" asp-for="Input.RememberMe">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                </div>
            </div>
        </form>
        <div class="social-auth-links text-center">
            <p>- OR -</p>
            <a href="#" class="btn btn-block btn-social btn-facebook btn-flat"><i class="fa fa-facebook"></i> Sign in using Facebook</a>
            <a href="#" class="btn btn-block btn-social btn-google btn-flat"><i class="fa fa-google-plus"></i> Sign in using Google+</a>
        </div>
        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
        <br>
        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register a new membership</a>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}