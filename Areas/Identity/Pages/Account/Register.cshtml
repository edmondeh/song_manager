@page "/register"
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading">@ViewData["Title"]</div>

                <div class="panel-body">
                    <form class="form-horizontal" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        @*<div class="form-group has-errorYesOrNo">
                                <label asp-for="Input.Name" class="col-md-4 control-label"></label>
                                <div class="col-md-6">
                                    <input class="form-control" asp-for="Input.Name" required autofocus>
                                <span asp-validation-for="Input.Name" class="text-danger"></span>
                                </div>
                            </div>*@

                        <div class="form-group has-errorYesOrNo">
                            <label asp-for="Input.Email" class="col-md-4 control-label">E-Mail Address</label>
                            <div class="col-md-6">
                                <input class="form-control" asp-for="Input.Email" required autofocus>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group has-errorYesOrNo">
                            <label asp-for="Input.Password" class="col-md-4 control-label">Password</label>
                            <div class="col-md-6">
                                <input class="form-control" asp-for="Input.Password" required>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group has-errorYesOrNo">
                            <label asp-for="Input.ConfirmPassword" class="col-md-4 control-label">Confirm Password</label>
                            <div class="col-md-6">
                                <input class="form-control" asp-for="Input.ConfirmPassword" required>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-6 col-md-offset-4">
                                <button type="submit" class="btn btn-primary">
                                    Register
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}