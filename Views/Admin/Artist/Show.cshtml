@using System.Web
@model ArtistVM
@{
    Layout = "";
}
<link href="~/plugins/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/plugins/select2/dist/css/select2.min.css" rel="stylesheet" />
<link href="~/assets/css/AdminLTE.min.css" rel="stylesheet" />
<script src="~/plugins/jquery/dist/jquery.min.js"></script>
<script src="~/plugins/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/plugins/select2/dist/js/select2.full.min.js"></script>
<div>
    <div class="col-md-12 m-t-20">
        <img class="profile-user-img img-responsive img-circle" src="~/images/avatar.png" alt="@Model.Name">
    </div>
    <div class="col-md-12">
        <h2 style="text-align: center; margin: 30px;">@Model.Name</h2>
    </div>
    <br>
</div>
<div>
    <div class="col-md-121" style="padding: 15px;">
        <table class="table table-hover1 table-bordered">
            <thead>
                <tr>
                    <th class="col-sm-4">Col</th>
                    <th>Info</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Artist id: </td>
                    <td>@Model.ArtistId</td>
                </tr>
                <tr>
                    <td>Name: </td>
                    <td>@char.ToUpper(Model.Name[0])@Model.Name.Substring(1)</td>
                </tr>
                <tr>
                    <td>Slug: </td>
                    <td>@Model.Slug</td>
                </tr>
                <tr>
                    <td>Contry: </td>
                    <td>@char.ToUpper(Model.Country[0])@Model.Country.Substring(1)</td>
                </tr>
                <tr>
                        <td>Genres: </td>
                        <td>@foreach (var genre in Model.Genres){<span class="label label-success label-many">@genre.Name</span>}</td>
                    </tr>
                <tr>
                    <td>Views: </td>
                    <td>getViews()</td>
                </tr>
                <tr>
                    <td>Bio: </td>
                    <td>@Html.Raw(HttpUtility.HtmlDecode(char.ToUpper(Model.Bio[0]) + Model.Bio.Substring(1)))</td>
                </tr>
                <tr>
                    <td>Created at: </td>
                    <td>@Model.CreatedAt.ToString("dd MMM yyyy HH:mm:ss")</td>
                </tr>
                <tr>
                    <td>Last updated at: </td>
                    <td>@Model.LastUpdatedAt.ToString("dd MMM yyyy HH:mm:ss")</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
</div>
