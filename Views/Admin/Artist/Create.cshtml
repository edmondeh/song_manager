@model ArtistCreateVM
@{
    ViewData["Title"] = "Create Artist";
    ViewData["PageDescription"] = "Add a new Artist";
    string siteUrl = Context.Request.Scheme + System.Uri.SchemeDelimiter + Context.Request.Host.Value;
}

@section css
{
<link href="~/plugins/select2/dist/css/select2.min.css" rel="stylesheet" />
<link href="~/assets/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css" rel="stylesheet" />
}

@section breadcrumb
{
<li><a asp-controller="Admin" asp-action="Index"><i class="fa fa-dashboard"></i> Admin</a></li>
<li><a asp-controller="Artist" asp-action="Index"><i class="fa fa-users"></i> Artists</a></li>
<li class="active"><i class="fa fa-user"></i> Create Artist</li>
}


<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">@ViewData["PageDescription"]</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            <form class="form-horizontal" asp-controller="Artist" asp-action="Create">
                <div class="box-body">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group m-t-20">
                        <label for="name" class="col-sm-2 control-label">Name: *</label>
                        <div class="col-sm-9">
                            <input class="form-control" placeholder="Name" asp-for="@Model.Name" >
                            <span asp-validation-for="@Model.Name" class="text-danger"></span>
                            @*<p class="help-block"></p>
                            @if ($errors->has('name'))
                            <p class="help-block">
                                { $errors->first('name') }}
                            </p>
                            @endif*@
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="country" class="col-sm-2 control-label">Country: *</label>
                        <div class="col-sm-9">
                            <input class="form-control" placeholder="Country" asp-for="@Model.Country" >
                            <span asp-validation-for="@Model.Country" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="genres" class="col-sm-2 control-label">Genres: *</label>
                        <div class="col-sm-9">
                            <select class="form-control select2" multiple="multiple" required="" asp-for="@Model.Genres" asp-items="@ViewBag.Genres">
                            </select>
                            <span asp-validation-for="@Model.Genres" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="bio" class="col-sm-2 control-label">Bio: *</label>
                        <div class="col-sm-9">
                            <textarea class="textarea" placeholder="Place some text here" style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;" asp-for="@Model.Bio" required></textarea>
                            <span asp-validation-for="@Model.Bio" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <button onclick="goBack()" class="btn btn-danger">Cancel</button>
                    <button type="submit" class="btn btn-success">&nbsp;Save&nbsp;</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts
{
<script src="~/plugins/select2/dist/js/select2.full.min.js"></script>
<script src="~/assets/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js"></script>
}

@section scr
{
<script>
    $(function () {
        $('.textarea').wysihtml5()
    })
</script>
}