@model UsersCreateVM
@{
    ViewData["Title"] = "Create User";
    ViewData["PageDescription"] = "Add a new user";
    string siteUrl = Context.Request.Scheme + System.Uri.SchemeDelimiter + Context.Request.Host.Value;
}

@section css
{
    <link href="~/plugins/select2/dist/css/select2.min.css" rel="stylesheet" />
}

@section breadcrumb
{
    <li><a asp-controller="Admin" asp-action="Index"><i class="fa fa-dashboard"></i> Admin</a></li>
    <li><a asp-controller="Users" asp-action="Index"><i class="fa fa-users"></i> Users</a></li>
    <li class="active"><i class="fa fa-user"></i> Create User</li>
}

<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Create user</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            <form class="form-horizontal" method="POST" asp-controller="Users" asp-action="Create">
                <div class="box-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group m-t-20">
                        <label asp-for="@Model.UserName" class="col-sm-2 control-label">UserName: *</label>
                        <div class="col-sm-9">
                            <input class="form-control" placeholder="Name" asp-for="@Model.UserName" required>
                            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Email" class="col-sm-2 control-label">Email: *</label>
                        <div class="col-sm-9">
                            <input class="form-control" placeholder="Email" asp-for="@Model.Email" required>
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Password" class="col-sm-2 control-label">Password: *</label>
                        <div class="col-sm-9">
                            <input class="form-control" placeholder="Password" asp-for="@Model.Password" required>
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div><label asp-for="@Model.ConfirmPassword" class="col-sm-2 control-label">Confirm Password: *</label></div>
                        <div class="col-sm-9">
                            <input class="form-control" placeholder="Password" asp-for="@Model.ConfirmPassword" required>
                            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="roles" class="col-sm-2 control-label">Roles: *</label>
                        <div class="col-sm-9">
                            <select class="form-control select2" multiple="multiple" required="" asp-for="@Model.Roles" asp-items="@ViewBag.Roles">
                            </select>
                            <span asp-validation-for="@Model.Roles" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <button onclick="goBack()" class="btn btn-danger">Cancel</button>
                    <button type="submit" class="btn btn-success">&nbsp;Save&nbsp;</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/plugins/select2/dist/js/select2.full.min.js"></script>
}